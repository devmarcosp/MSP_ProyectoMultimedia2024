@model IEnumerable<MSP_ProyectoMultimedia2024.Models.Tables.Usuarios>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-5 p-4" style="background-color: #f0f0f0; border-radius: 8px;">
    <h1 class="text-center mb-4">Usuarios Registrados</h1>

    <div class="text-right mb-3">
        <a asp-action="Create" class="btn btn-lg btn-success">Registrar</a>
    </div>

    <div class="table-responsive">
        <table id="usuariosTable" class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Tipo de Usuario</th>
                    <th>Fecha de Registro</th>
                    <th class="text-right">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Password)</td>
                        <td>@Html.DisplayFor(modelItem => item.TipoUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                        <td class="text-right">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            $('#instructoresTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/Spanish.json"
                },
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true
            });
        });
    </script>
}

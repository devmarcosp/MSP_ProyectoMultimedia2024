@model MSP_ProyectoMultimedia2024.Models.Dto.CategoriasDTO

@{
    ViewData["Title"] = "Crear Categoría";
}

<div class="container mt-5 p-4" style="background-color: #f0f0f0; border-radius: 10px;">
    <h1 class="text-center mb-4" style="font-family: Arial, sans-serif; color: #333;">Crear Nueva Categoría</h1>

    <h4 class="text-center" style="font-family: 'Georgia', serif; color: #555;">Esta sección es para añadir las categorías de los cursos disponibles</h4>
    <p class="text-center" style="font-size: 1.1em; color: #777;">Ejemplo de Categorías: Programación, Matemáticas, etc.</p>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="Nombre" class="control-label" style="font-weight: bold; color: #444;"></label>
                        <input asp-for="Nombre" class="form-control" style="border: 1px solid #ccc; border-radius: 5px;" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row mt-4">
                    <div class="col-md-6">
                        <a href="/Home/Mantenedores" class="btn btn-secondary" style="width: 100%;">Volver</a>
                    </div>
                    <div class="col-md-6 text-right">
                        <input type="submit" value="Guardar Categoría" class="btn btn-success" style="width: 100%;" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

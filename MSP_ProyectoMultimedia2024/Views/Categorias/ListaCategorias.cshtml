@model IEnumerable<MSP_ProyectoMultimedia2024.Models.Dto.CategoriasDTO>

@{
    ViewData["Title"] = "Categorías";
}

<div class="container mt-5 p-4" style="background-color: #f0f0f0; border-radius: 8px;">
    <h1 class="text-center mb-4">Categorías</h1>

    <div class="d-flex justify-content-end mb-3" style="width: 80%; margin: 0 auto;">
        <a asp-action="Create" class="btn btn-lg btn-success">Nueva Categoría</a>
    </div>

    <div class="table-responsive" style="width: 80%; margin: 0 auto;">
        <table id="categoriasTable" class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th class="text-right">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td class="text-right">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#instructoresTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/Spanish.json"
                },
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true
            });
        });
    }
    </script>

    }
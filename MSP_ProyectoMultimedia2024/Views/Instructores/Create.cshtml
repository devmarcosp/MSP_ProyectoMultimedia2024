@model MSP_ProyectoMultimedia2024.Models.Tables.Instructores

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5 p-4" style="background-color: #f0f0f0; border-radius: 10px;">
    <h1 class="text-center mb-4" style="font-family: Arial, sans-serif; color: #333;">Crear Instructor</h1>

    <h4 class="text-center" style="font-family: 'Georgia', serif; color: #555;">Instructores</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NombreInstructor" class="control-label" style="font-weight: bold; color: #444;"></label>
                    <input asp-for="NombreInstructor" class="form-control" style="border: 1px solid #ccc; border-radius: 5px;" />
                    <span asp-validation-for="NombreInstructor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Especialidad" class="control-label" style="font-weight: bold; color: #444;"></label>
                    <input asp-for="Especialidad" class="form-control" style="border: 1px solid #ccc; border-radius: 5px;" />
                    <span asp-validation-for="Especialidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label" style="font-weight: bold; color: #444;"></label>
                    <input asp-for="Email" class="form-control" style="border: 1px solid #ccc; border-radius: 5px;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-row mt-4">
                    <div class="col-md-6">
                        <a href="/Home/Mantenedores" class="btn btn-secondary" style="width: 100%;">Volver</a>
                    </div>
                    <div class="col-md-6 text-right">
                        <input type="submit" value="Crear Instructor" class="btn btn-primary" style="width: 100%;" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
